<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>osivia.site</groupId>
	<artifactId>osivia-site-parent</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>osivia-site</name>

	<properties>
		<deploy.demo.dir>${toutatice-portail-runtime-dir}/custom/deploy</deploy.demo.dir>
		<toutatice.core.version>2.0-RC1</toutatice.core.version>
		<toutatice.cms.version>2.0-RC1</toutatice.cms.version>
	</properties>

	<modules>
	   <module>osivia-site-test</module>
	</modules>

	<build>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<encoding>UTF-8</encoding>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>jboss-packaging-maven-plugin</artifactId>
					<version>2.1.1</version>
					<extensions>true</extensions>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-resources-plugin</artifactId>
					<configuration>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>
				
     				 <plugin>
        				<groupId>org.apache.maven.plugins</groupId>
       					 <artifactId>maven-antrun-plugin</artifactId>
        				<version>1.3</version>
      				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.2.1</version>
				 	<configuration>
						<tagBase>http://www.osivia.com/repos/osivia-site/tags</tagBase>
						<releaseProfiles>unpack,pack</releaseProfiles>
						<preparationGoals>clean install</preparationGoals>
						<goals>deploy</goals>
				      	</configuration>
				</plugin>
				
			</plugins>			

	</build>



  <scm>
    <developerConnection>scm:svn:http://www.osivia.com/repos/osivia-site/trunk</developerConnection>
  </scm>


 <distributionManagement>
     <repository>
          <id>toutatice-releases</id>
          <url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
     </repository>
     <snapshotRepository>
          <id>toutatice-snapshots</id>
          <url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-snapshots</url>
     </snapshotRepository>
 </distributionManagement>
		
</project>

