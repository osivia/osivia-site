<?xml version="1.0"?>
<component name="org.osivia.nuxeo.custom.filters">

	<require>org.nuxeo.ecm.platform.actions.ActionService</require>
	<require>fr.toutatice.ecm.platform.web.filters</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="filters">

		<!-- Filtre pour le bouton "newDocument" -->
		<filter id="create" append="true">
			<rule grant="true">
				<type>PortalSiteContainer</type>
				<type>DocumentUrlContainer</type>
				<type>Agenda</type>  
			</rule>
		</filter>

		<filter id="importFile" append="true">
			<rule grant="true">
				<type>PortalSiteContainer</type>
			</rule>
		</filter>

	</extension>

</component>