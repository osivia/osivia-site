<?xml version="1.0"?>

<component name="org.osivia.ui.types">

    <require>org.nuxeo.ecm.platform.types.TypeService</require>
    <require>org.osivia.nuxeo.types</require>

    <extension
        target="org.nuxeo.ecm.platform.types.TypeService"
        point="types">

        <type
            id="Zoom"
            coretype="Zoom">
            <label>Zoom</label>
            <category>SimpleDocument</category>
            <icon>/img/zoom_16.png</icon>
            <bigIcon>/img/zoom_100.png</bigIcon>
            <description></description>
            <default-view>view_documents</default-view>
            <layouts mode="create">
                <layout>heading</layout>
                <layout>layout@zoom</layout>
            </layouts>
            <layouts mode="edit">
                <layout>heading</layout>
                <layout>layout@zoom</layout>
            </layouts>
            <layouts mode="view">
                <layout>layout@zoom</layout>
            </layouts>
        </type>

        <type id="PortalSiteContainer">
            <label>Conteneur d'espaces de publication</label>
            <category>SuperDocument</category>
            <icon>/img/PSC_16.png</icon>
            <bigIcon>/img/PSC_100.png</bigIcon>
            <description>Conteneur d'espaces de publication</description>
            <default-view>view_documents</default-view>
            <subtypes>
                <type>PortalSite</type>
            </subtypes>
            <layouts mode="any">
                <layout>heading</layout>
            </layouts>
            <layouts mode="edit">
                <layout>heading</layout>
            </layouts>
            <contentViews category="content">
                <contentView showInExportView="false">cv_ContentOrderedReadNWrite
                </contentView>
            </contentViews>
            <contentViews category="trash_content">
                <contentView showInExportView="false">
                    document_trash_content
                </contentView>
            </contentViews>
        </type>
        
         <type id="DocumentUrlContainer">
            <label>Favoris</label>
            <category>Collaborative</category>
            <icon>/icons/folder.gif</icon>
            <bigIcon>/icons/folder_100.png</bigIcon>
            <description>Favoris</description>
            <default-view>view_documents</default-view>
            <layouts mode="any">
                <layout>heading</layout>
            </layouts>
            <layouts mode="edit">
                <layout>heading</layout>
            </layouts>
            <contentViews category="content">
                <contentView showInExportView="false">cv_ContentOrderedReadNWrite
                </contentView>
            </contentViews>
            <contentViews category="trash_content">
                <contentView showInExportView="false">
                    document_trash_content
                </contentView>
            </contentViews>
        </type> 
        
        <type id="Agenda">
            <label>Agenda</label>
            <category>Collaborative</category>
            <icon>/icons/folder.gif</icon>
            <bigIcon>/icons/folder_100.png</bigIcon>
            <description>Agenda</description>
            <default-view>view_documents</default-view>
            <layouts mode="any">
                <layout>heading</layout>
            </layouts>
            <layouts mode="edit">
                <layout>heading</layout>
            </layouts>
            <contentViews category="content">
                <contentView showInExportView="false">cv_ContentOrderedReadNWrite
                </contentView>
            </contentViews>
            <contentViews category="trash_content">
                <contentView showInExportView="false">
                    document_trash_content
                </contentView>
            </contentViews>
        </type> 

    </extension>

</component>