<?xml version="1.0"?>
<component name="org.osivia.nuxeo.roadmap.vocabularies">

	<extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
		point="directories">

		<directory name="releaseState">
			<schema>vocabulary</schema>
			<dataSource>java:/nxsqldirectory</dataSource>
			<cacheTimeout>3600</cacheTimeout>
			<cacheMaxSize>1000</cacheMaxSize>
			<idField>id</idField>
			<autoincrementIdField>false</autoincrementIdField>
			<createTablePolicy>on_missing_columns</createTablePolicy>
			<table>vocabulary_releaseState</table>
			<dataFile>vocabularies/roadmap/releaseState.csv</dataFile>
		</directory>

	</extension>
    
    <extension target="org.nuxeo.ecm.directory.ui.DirectoryUIManager"
        point="directories">
        <directory name="releaseState" layout="vocabulary" sortField="id" />
    </extension>    

</component>