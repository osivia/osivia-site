<?xml version="1.0"?>

<component name="org.osivia.nuxeo.roadmap.core.types">

	<require>org.nuxeo.ecm.core.schema.TypeService</require>

	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="schema">

		<schema name="roadmapdistrib" prefix="rmpd" src="schemas/roadmap/distribution.xsd" />
	</extension>

	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="doctype">
        <doctype name="Product" extends="Document">
            <schema name="dublincore" />
            <schema name="uid" />
            <schema name="toutatice" />
            <facet name="Versionable" />
            <facet name="Folderish" />
            <facet name="Orderable" />
            <facet name="TTCPortalConfigurable" />
            <facet name="TTCAttachableImages" />
            <facet name="FolderishEditable" />
            <facet name="SpaceNavigationItem" />
        </doctype>

		<doctype name="Distribution" extends="Document">
			<schema name="roadmapdistrib" />
			<schema name="dublincore" />
			<schema name="uid" />
			<schema name="toutatice" />
            <schema name="files" />
			<facet name="Versionable" />
			<facet name="Orderable" />
			<facet name="TTCAttachableImages" />
		</doctype>
		

	</extension>

</component>